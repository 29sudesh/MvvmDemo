<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_common_toolbar_black"/>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/rl_userImage"
                        android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_userImage"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        app:srcCompat="@drawable/ic_profile_placeholder"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="@dimen/_3sdp"
                        android:background="@drawable/ic_user_placeholder"/>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_3sdp">
            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="start"
                    android:textColor="@color/toptextcolor"/>
            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="helvetica.ttf"
                    android:id="@+id/et_first_name"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:ems="10"
                    android:singleLine="true"
                    android:focusable="false"
                    android:onClick="onClick"
                    android:focusableInTouchMode="false"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:textColorHint="@color/edittextline"
                    android:padding="@dimen/_3sdp"
                    android:text=""
                    android:imeOptions="actionNext"

            />

            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="start"
                    android:textColor="@color/toptextcolor"/>
            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="helvetica.ttf"
                    android:id="@+id/et_last_name"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:ems="10"
                    android:singleLine="true"
                    android:focusable="false"
                    android:onClick="onClick"
                    android:focusableInTouchMode="false"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:textColorHint="@color/edittextline"
                    android:padding="@dimen/_3sdp"
                    android:text=""
                    android:imeOptions="actionNext"

            />

            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="start"
                    android:textColor="@color/toptextcolor"/>


                <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="helvetica.ttf"
                    android:id="@+id/et_phone_number"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="phone|textNoSuggestions"
                    android:singleLine="true"
                    android:focusable="false"
                    android:onClick="onClick"
                    android:focusableInTouchMode="false"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:textColorHint="@color/edittextline"
                    android:padding="@dimen/_3sdp"
                    android:text=""
                    android:imeOptions="actionNext"

            />

            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="start"
                    android:textColor="@color/toptextcolor"/>
            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="helvetica.ttf"
                    android:id="@+id/et_email"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:ems="10"
                    android:singleLine="true"
                    android:focusable="false"
                    android:onClick="onClick"
                    android:focusableInTouchMode="false"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:textColorHint="@color/edittextline"
                    android:padding="@dimen/_3sdp"
                    android:text=""
                    android:imeOptions="actionNext"

            />

            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="start"
                    android:textColor="@color/toptextcolor"/>
            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="helvetica.ttf"
                    android:id="@+id/et_password"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textWebPassword|textNoSuggestions"
                    android:ems="10"
                    android:singleLine="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:textColorHint="@color/edittextline"
                    android:padding="@dimen/_3sdp"
                    android:onClick="onClick"
                    android:text="dfgvdfgdfgh"
                    android:imeOptions="actionNext"

            />
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</LinearLayout>