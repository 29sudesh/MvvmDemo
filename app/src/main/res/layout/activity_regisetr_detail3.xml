<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".view.activity.RegisterDetailActivity">

    <include layout="@layout/layout_common_toolbar"/>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/driver_licence_verified"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/toptextcolor"/>


                <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_driver_licence"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                       android:layout_margin="@dimen/_3sdp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_80sdp"
                        android:maxHeight="@dimen/_100sdp"
                        android:layout_gravity="center"
                android:background="@drawable/ic_image_backgroung"/>


            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/clear_picture_of_your_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/toptextcolor"/>


            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_numberPlate"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_80sdp"
                    android:maxHeight="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_image_backgroung"/>

            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/t_zini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/toptextcolor"/>


            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_tzini"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_80sdp"
                    android:maxHeight="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_image_backgroung"/>


            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="helvetica.ttf"
                    android:text="@string/car_licence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/toptextcolor"/>


            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_car_licence"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_80sdp"
                    android:maxHeight="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_image_backgroung"/>





            <com.sb.ubergodriver.CommonUtils.CustomTextUtils.CustomButton
                    android:fontFamily="helvetica.ttf"
                    android:id="@+id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@color/black"
                    android:text="@string/submit"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:textAllCaps="false"
                    android:singleLine="true"/>

            <!--bind:toastMessage="@{viewModel.toastMessage}"-->

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
